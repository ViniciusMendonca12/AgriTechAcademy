<!DOCTYPE html>
<html>

<head>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
        }

        body {
            font-family: 'Cairo', sans-serif;
            flex-shrink: 0;
            background-size: cover;
            background-position: center;
            background-color: rgba(244, 246, 244, 0.464);
        }

        .title {
            background-color: rgb(47, 196, 42);
            color: #fff;
            padding: 20px;
            text-align: center;
            font-size: 18px;
            display: flex;
            justify-content: center;
            height: 130px;
        }

        .navigation {
            width: 280px;
            float: left;
            background-color: rgb(157, 227, 155);
            color: #fff;
            height: calc(1000px);
            box-sizing: border-box;
            padding: 20px;
        }

        .navigation div {
            cursor: pointer;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 10px;
            transition: background-color 0.3s ease;
        }

        .navigation div:hover {
            background-color: rgb(47, 196, 42);
        }

        #aulaMain{
            background-color: rgb(47, 196, 42);

        }

        .content {
            margin-left: 500px;
            margin-top: 50px;
            padding: 20px;
        }

        .watched {
            background-color: green;
        }

        video {
            width: 100%;
            max-width: 600px;
            display: block;
            margin-bottom: 20px;
        }

        .botao {
            border-radius: 100px;
            background: rgb(47, 196, 42);
            color: white;
            padding: 5px 10px 5px 10px;
            margin: 10px 0px 0px 520px;
            border: solid rgb(255, 165, 0);
            margin-bottom: 15px;

        }

        .camposSpan {
            display: flex;
            border-bottom: solid rgba(177, 255, 143, 0.425);
            border-radius: 10px;
            width: 710px;
            margin-bottom: 7px;
            padding-bottom: 15px;
        }

        .camposSpan h2 {
            font-size: 20px;
            color: rgb(255, 165, 0);
        }

        .camposSpan h3 {
            margin: 3px 0px 0px 4px;
            font-size: 16px;

        }

        #video {
            margin-bottom: 20px;
        }

        .divSpan span {
            display: block;
            border-bottom: solid rgba(177, 255, 143, 0.425);
            border-top: solid rgba(177, 255, 143, 0.425);
            border-radius: 10px;
            width: 710px;
            margin-bottom: 7px;
            padding-bottom: 15px;
            padding-top: 5px;
        }

        .imgCurso {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            margin-right: 18px;
        }

        .title h1 {
            margin-top: 7px;
        }

        .logo {
            width: 200px;
            height: 170px;
            margin: -50px 0px 0px -300px;


        }

        .imgCurso{
            margin-left: 200px;
        }
        .linkAula{
            text-decoration: none;
            color: white;
        }
    </style>
</head>

<body>

    <div class="title">
       <a href="/"><img class="logo" src="/img/logoCompleta.svg" alt="Logo"></a> 
        <img class="imgCurso" src="<%=curso.imagemCurso%>" class="imgCurso">
        <h1> <%=curso.titulo%> </h1>

    </div>

    <div class="navigation">
        <a class="linkAula" href="/assistir/curso/<%=curso.titulo%>" > <div id="aulaMain"> <%= curso.tituloAulaCurso %></div> </a>
        <%aulas.forEach(aula=> {%>
        <a class="linkAula" href="/assistir/<%= curso.titulo%>/<%=aula.tituloAula%>"  ><div id="aula1">  <%=aula.tituloAula%></div></a>

        
        <%})%>
    </div>

    <div class="content">
        
        <iframe width="710" height="465" id="video" src="<%=aula.linkAula%>" frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen></iframe>

        <button class="botao" onclick="markAsWatched()"> Marcar como assistido</button>

        <div class="divSpan">
            <span class="camposSpan">
                <h2>Sobre a aula:
                    <h3>
                        <%= aula.descricaoAula %>
                    </h3>
                </h2>
            </span>
        </div>
        <span class="camposSpan">
            <h2>Categoria: <h3>
                    <%= curso.title %>
                </h3>
            </h2>
        </span>
        <span class="camposSpan">
            <h2>Instrutor: <h3>
                    <%= curso.nomeCompleto %>
                </h3>
            </h2>
        </span>
        <span class="camposSpan">
            <h2>Contato: <h3>
                    <%= curso.celular %>
                </h3>
            </h2>
        </span>
    </div>

    <div>
        <h3>Fazer Pergunta</h3>
        <form action="/perguntarAula" method="POST">

            <input type="text" placeholder="Defina o tÃ­tulo de sua pergunta" name="tituloPergunta">
            <br>
            <textarea name="descricaoPergunta" id="descricaoPergunta" placeholder="Descreva sua Pergunta Aqui"></textarea>
            <br>
            <input type="number" name="idAula" value="<%= aula.id %>">
            <input type="text" name="tituloAula" value="<%=aula.tituloAula%>">
            <br>
            <input type="text" name="tituloCurso" value="<%=curso.titulo%>">
            <br>
            <button type="submit">Perguntar!!</button>

        </form>
    </div>

    <div>
        <h3>perguntas e repostas</h3>

        

    </div>

</body>

<script src="/tinymce/js/tinymce/tinymce.min.js"></script>

<script>
    tinymce.init({
                selector: "#conteudoCurso",
                language: 'pt_BR',
                plugins: [
                    'advlist',
                    'autolink',
                    'link',
                    'image',
                    'lists',
                    'preview',
                    'searchreplace',
                    'wordcount',
                    'fullscreen',
                    'insertdatetime',
                    'media',
                    'save',
                    'table',
                    'emoticons',
                ]
            })
</script>
</html>